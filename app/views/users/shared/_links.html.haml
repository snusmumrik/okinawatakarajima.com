- if controller_name != 'sessions'
  %div= link_to t("links.user.sign_in"), new_session_path(resource_name), :class => "btn btn-default"
- if devise_mapping.registerable? && controller_name != 'registrations'
  %div= link_to t("links.user.sign_up"), new_registration_path(resource_name), :class => "btn btn-danger"
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  %div= link_to t("links.user.forgot_password"), new_password_path(resource_name), :class => "btn btn-default"
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %div= link_to t("links.user.resend_confirmation"), new_confirmation_path(resource_name), :class => "btn btn-default"
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %div= link_to t("links.user.didn't receive unlock instructions?"), new_unlock_path(resource_name), :class => "btn btn-default"
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to provider.to_s.titleize + t("links.user.sign_in_with"), omniauth_authorize_path(resource_name, provider), :class => "btn btn-default"
    %br/
