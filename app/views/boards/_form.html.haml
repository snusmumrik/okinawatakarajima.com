= form_for(@board) do |f|
  - if @board.errors.any?
    #error_explanation
      %h2
        = pluralize(@board.errors.count, "error")
        prohibited this board from being saved:
      %ul
        - @board.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :category
    %br/
    = f.text_field :category
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :deleted_at
    %br/
    = f.datetime_select :deleted_at
  .actions
    = f.submit
