<div class="narrow">
  <div class="center">
    <h2><%= @board.name %> <%= @board.category %></h2>
  </div>

  <%= link_to t("links.new") + t("activerecord.models.post"), "#{new_post_path}/#{@board.id}", class: "btn btn-default" %>

  <div class="float-right"><%= paginate @posts %></div>

  <table class="table table-striped table-bordered">
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
      </tr>
      <tr>
        <td>
          <p><%= post.text %></p>
          <% if post.images %>
            <% post.images.each do |image| %>
              <%= link_to image_tag(image.url(:thumb)), image.url(:medium), "data-lightbox" => image.url(:medium) %>
            <% end %>
          <% end %>
          <div class="right">
            <% if post.user && %>
              <%= image_tag post.user.image.url(:thumb), height:40 %>
            <% end %>
            <%= post.name %>
            <%= mail_to post.email, "", class: "glyphicon glyphicon-envelope" unless post.email.blank? %>
            <span class="small"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></span>
          </div>
        </td>
      </tr>
    <% end %>
  </table>

  <div class="float-right"><%= paginate @posts %></div>
  <div class="clear"></div>

  <%= link_to t("links.new") + t("activerecord.models.post"), "#{new_post_path}/#{@board.id}", class: "btn btn-default" %>
</div>
